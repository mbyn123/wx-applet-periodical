/* components/book/index.wxss */

.book-container{
  position: relative;
  display: flex;
  flex-direction: column;
  width:240rpx;
  height:360rpx;
  border-radius: 2px;
  box-shadow: 2px 2px 2px #e3e3e3;

}

.book-container .book-img{
  width:100%;
  height:100%;
}

.book-container .describe{
  width:200rpx;
  position: absolute;
  display: flex;
  flex-direction: column;
  bottom:0;
  background: #fff;
  font-size:24rpx;
  padding: 5rpx 20rpx;
}

.book-container .describe .title{
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow:hidden; 
}

.book-container .describe .author{
  font-size: 20rpx;
  color:#999999;
  margin: 5rpx 0;
   text-overflow: ellipsis;
  white-space: nowrap;
  overflow:hidden; 
}

.book-container .describe .footer{
  display:inline-flex;
  justify-content: flex-end;
  font-size: 20rpx;
  color:#666;
  margin: 10rpx 0 5rpx 0; 
}