/* components/search/index.wxss */

.search-container {
  display: flex;
  flex-direction: column;
}

.search-container .header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border: 1px solid #f5f5f5;
}

.search-container .header image {
  width: 30rpx;
  height: 30rpx;
}

.search-container .header .search-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #f5f5f5;
  border-radius: 30rpx;
  height: 60rpx;
  width: 550rpx;
  padding: 5rpx 20rpx;
}

.header .search-bar .search-input {
  width: 100%;
  margin: 0 20rpx;
}

.history {
  display: flex;
  flex-direction: column;
}

.history .search-history {
  margin-bottom: 50rpx;
  padding: 20rpx;
}

.history .search-history .title {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.history .search-history .chunk {
  width: 10rpx;
  height: 30rpx;
  background: #000;
  margin-right: 30rpx;
}

.tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 30rpx;
}

.tags v-tag {
  margin: 0 15rpx 10rpx 0;
}

.search-result {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx 90rpx;
}

.search-result .book{
  margin-bottom: 40rpx;
}

.loading {
    margin:0 auto
}

.loading-center {
    position: absolute;
    top: 50%;
    left: 50%;
}
.empty-tip {
    display: inline-block;
    width: 100%;
    text-align: center;
    position: absolute;
    top: 50%;
}

.none{
  margin: 0 auto;
}