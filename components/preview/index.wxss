/* components/preview/index.wxss */

.preview-container{
  display: flex;
  flex-direction: column;
  width:330rpx;
  margin-bottom: 20rpx;
  background: #fff;
}

.preview-container .header{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 30rpx;
  margin: 20rpx 0

}

.preview-content{
   display: flex;
  flex-direction: column;
  align-items: center
}

.preview-container .music-img{
  width:250rpx;
  height:240rpx;
  border-radius: 50%;
  margin: 20rpx 0
}

.preview-container .img{
  width:100%;
  height:240rpx;
  margin: 20rpx 0
}

.preview-content .text{
  color:#666;
  font-size: 28rpx;
  padding: 0 20rpx;
  margin: 20rpx 0;
  height:130rpx;
  overflow: hidden
}