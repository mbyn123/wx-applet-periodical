/* pages/book/book.wxss */

.books-container {
  display: flex;
  flex-direction: column;
}

.books-container .books-search {
  width:700rpx;
  height:68rpx;
  border: 1px solid #f5f5f5;
  border-radius: 20px;
  background: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
}

.books-container .header {
  position: fixed;
  top:0;
  background: #fff;
  width: 100%;
  height:100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 99;
}

.books-container .books-search .search-img {
  width: 24rpx;
  height: 24rpx;
}

.books-container .books-search .search-name {
  font-size: 24rpx;
  color: #9999;
  margin-left: 10rpx;
}

.books-container .title {
  background: #f5f5f5;
  text-align: center;
  margin-top:100rpx; 
  padding: 50rpx 0;
}

.books-container .title image {
  width: 106rpx;
  height: 34rpx;
}

.books-container .content {
  display: flex;
  flex-wrap: wrap;
  background: #f5f5f5;
  justify-content: space-between;
  padding: 0 90rpx ;
}

.books-container .content .book {
  margin-bottom:40rpx;
}
